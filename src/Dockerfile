FROM python:3.12-slim

WORKDIR /cryptocurrency-telegram-stickers/

COPY . /cryptocurrency-telegram-stickers

ENV PYTHONDONTWRITEBYTECODE 1

ENV CONFIG_CURRENCY usd
ENV CONFIG_TOP_CURRENCY_AMOUNT 100
ENV CONFIG_TELEGRAM_STICKERS_UPDATE_INTERVAL 600

ENV LOG_LEVEL info

ENV TELEGRAM_BOT_TOKEN_ID ""
ENV TELEGRAM_CHANNEL_ID ""
ENV TELEGRAM_USER_ID ""

ENV COINGECKO_API_KEY ""

RUN pip install -r requirements.txt
